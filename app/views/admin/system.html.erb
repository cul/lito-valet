

<h2>System Details</h2>

<% database_configuration = Rails.configuration.database_configuration[Rails.env] %>

<% system_details = [
  'VALET_VERSION', 
  'RUBY_VERSION', 
  'Rails.version', 
  'Rails.env',
  'request.protocol', 
  'request.fullpath', 
  'request.url', 
  'request.remote_addr',
  'Socket.gethostname',
  'Process.pid', 
  'Process.uid', 
  'Etc.getpwuid(Process.uid).name',
  'time_ago_in_words(BOOTED_AT)',
  'database_configuration["adapter"]',
  'database_configuration["host"]',
  'database_configuration["database"]',
  'database_configuration["username"]' 
  ] %>

<table class='table table-bordered table-hover table-condensed'>
  <% system_details.each do |i| %>
    <tr class='active'>
      <td><%= i%></td>
      <td><%= eval(i)%></td>
    </tr>
  <% end %>
</table>


<h2>Full APP_CONFIG</h2>
<pre>
  <%= APP_CONFIG.to_hash.to_yaml %>
</pre>

<h2>Full ENV</h2>
<pre>
  <%= ENV.sort.to_h.to_yaml %>
</pre>


